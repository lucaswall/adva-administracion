{
  "name": "adva-administracion",
  "version": "1.0.0",
  "type": "module",
  "description": "ADVA invoice and payment processing server with Gemini AI",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch --env-file=.env src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "build:script": "node apps-script/build.js",
    "deploy:script": "npm run build:script && cd apps-script && clasp push",
    "upload:samples": "node --env-file=.env support/upload-samples.js"
  },
  "keywords": [
    "invoice",
    "automation",
    "gemini-ai",
    "google-sheets",
    "google-drive",
    "typescript",
    "fastify"
  ],
  "author": "Lucas Wall (ADVA)",
  "license": "MIT",
  "dependencies": {
    "fastify": "^5.2.1",
    "googleapis": "^171.1.0",
    "node-cron": "^4.2.1",
    "p-queue": "^9.1.0",
    "pino": "^10.2.0"
  },
  "devDependencies": {
    "@google/clasp": "^3.2.0",
    "@types/google-apps-script": "^2.0.8",
    "@types/node": "^25.0.9",
    "@types/node-cron": "^3.0.11",
    "@vitest/coverage-v8": "^4.0.17",
    "cli-progress": "^3.12.0",
    "esbuild": "^0.27.2",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
