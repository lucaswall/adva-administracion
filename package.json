    "pino": "^10.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/node-cron": "^3.0.11",
    "@vitest/coverage-v8": "^4.0.17",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=20.0.0"
